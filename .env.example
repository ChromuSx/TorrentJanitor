# TorrentJanitor Environment Variables
# Copy this file to .env and configure with your values

# qBittorrent Connection
QB_HOST=localhost
QB_PORT=8080
QB_USERNAME=admin
QB_PASSWORD=adminadmin

# Working Directory (for state and log files)
WORK_DIR=/data

# Timezone
TZ=UTC

# Docker User (optional)
PUID=1000
PGID=1000

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO